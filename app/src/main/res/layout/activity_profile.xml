<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/back_buttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_keyboard_backspace_24"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_marginStart="35sp"
        android:layout_marginTop="35sp"
        android:contentDescription="@string/account"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="-57dp"
        android:layout_marginTop="-55dp"
        android:layout_toEndOf="@+id/profile_image"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/baseline_add_box_24"
        android:visibility=""
        android:contentDescription="@string/account"/>

    <Button
        android:id="@+id/login_bottom"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginStart="100sp"
        android:text="@string/login"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/login_bottom"
        android:text="/"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/sign_in"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_toEndOf="@+id/slash"
        android:text="@string/sign_in"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/account"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_bottom"

        android:layout_marginStart="35sp"
        android:layout_marginTop="10dp"
        android:text="@string/account"
        android:textColor="#0B0B0B"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/language"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account"
        android:layout_marginStart="35sp"
        android:text="@string/language"
        android:textColor="#0B0B0B"
        android:textSize="30sp" />

    <Button
        android:id="@+id/dark_mode"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/language"
        android:layout_marginStart="35sp"
        android:text="@string/dark_mode"
        android:textColor="#0B0B0B"
        android:textSize="30sp" />

    <FrameLayout
        android:id="@+id/FrameLayout_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


    <Switch
        android:id="@+id/dark_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/language"
        android:layout_marginStart="120dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/dark_mode"
        android:scaleX="2"
        android:scaleY="2"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/about_us"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dark_mode"
        android:layout_marginStart="35sp"
        android:text="@string/about_us"
        android:textColor="#0B0B0B"
        android:textSize="30sp" />

    <Button
        android:id="@+id/logout"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_us"
        android:layout_marginStart="35sp"
        android:text="@string/logout"
        android:textColor="#0B0B0B"
        android:textSize="30sp"
        android:visibility="visible" />

</RelativeLayout>