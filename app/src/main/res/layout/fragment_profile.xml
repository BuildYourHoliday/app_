<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/ScreenBackground">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_keyboard_backspace_24"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_marginStart="35sp"
        android:layout_marginTop="35sp"
        android:contentDescription="@string/account"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:src="@drawable/no_profile_pic"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp" />

    <ImageButton
        android:id="@+id/add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="-57dp"
        android:layout_marginTop="-55dp"
        android:layout_toEndOf="@+id/profile_image"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/baseline_add_box_24"
        android:visibility="visible"
        android:contentDescription="@string/account"/>

    <Button
        android:id="@+id/login_bottom"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:background="?android:attr/panelBackground"
        android:layout_marginStart="100sp"
        android:text="@string/login"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/login_bottom"
        android:text="/"
        style="@style/TextBackground"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/sign_in"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_toEndOf="@+id/slash"
        android:background="?android:attr/panelBackground"
        android:text="@string/sign_up"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/accountButton"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_bottom"
        android:layout_marginTop="18dp"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="0sp"
        app:strokeColor="#1C1515"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_bottom"
        android:layout_marginStart="35sp"
        android:layout_marginTop="15dp"
        android:text="@string/account"
        android:textSize="35sp"
        style="@style/TextBackground"
        android:visibility="visible" />

    <Button
        android:id="@+id/languageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountButton"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="0sp"
        app:strokeColor="#1C1515" />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account"
        android:layout_marginStart="35sp"
        android:layout_marginTop="5dp"
        android:text="@string/language"
        android:textSize="35sp"
        style="@style/TextBackground"/>

    <TextView
        android:id="@+id/dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/language"
        android:layout_marginStart="35sp"
        android:layout_marginTop="5dp"
        android:text="@string/dark_mode"
        android:textSize="35sp"
        style="@style/TextBackground"/>

    <FrameLayout
        android:id="@+id/FrameLayout_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Switch
        android:id="@+id/dark_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/language"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="37dp"
        android:layout_toEndOf="@+id/dark_mode"
        android:checked="false"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:theme="@style/SCBSwitch"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track" />

    <Button
        android:id="@+id/aboutUsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dark_mode"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="0sp"
        app:strokeColor="#1C1515" />

    <TextView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dark_mode"
        android:layout_marginStart="35sp"
        android:layout_marginTop="5dp"
        android:text="@string/about_us"
        android:textSize="35sp"
        style="@style/TextBackground"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsButton"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="0sp"
        app:strokeColor="#1C1515"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_us"
        android:layout_marginStart="35sp"
        android:layout_marginTop="5dp"
        android:text="@string/logout"
        android:textSize="35sp"
        style="@style/TextBackground"
        android:visibility="visible" />

</RelativeLayout>